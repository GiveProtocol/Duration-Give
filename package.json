{
  "name": "duration-charity-platform",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:client\" \"npm run dev:server\"",
    "dev:client": "vite",
    "dev:server": "tsx watch server.ts",
    "build": "tsc && vite build",
    "build:app": "tsc && vite build --mode app",
    "start": "NODE_ENV=production node --loader tsx server.ts",
    "lint": "eslint .",
    "preview": "vite preview",
    "deploy:moonbase": "hardhat run scripts/deploy.ts --network moonbase",
    "deploy:verification": "hardhat run scripts/deploy-verification.ts --network moonbase",
    "deploy:distribution": "hardhat run scripts/deploy-distribution.ts --network moonbase",
    "test": "hardhat test",
    "compile": "hardhat compile",
    "node": "hardhat node",
    "accounts": "hardhat accounts"
  },
  "dependencies": {
    "@chainlink/contracts": "^0.8.0",
    "@mailchimp/mailchimp_marketing": "^3.0.80",
    "@openzeppelin/contracts": "^5.0.1",
    "@supabase/supabase-js": "^2.39.7",
    "@tailwindcss/typography": "^0.5.10",
    "@tanstack/react-query": "^5.24.1",
    "@tiptap/core": "^2.2.4",
    "@tiptap/extension-link": "^2.2.4",
    "@tiptap/pm": "^2.2.4",
    "@tiptap/react": "^2.2.4",
    "@tiptap/starter-kit": "^2.2.4",
    "buffer": "^6.0.3",
    "clsx": "^2.1.0",
    "compression": "^1.7.4",
    "dotenv": "^16.4.7",
    "ethers": "^6.11.1",
    "express": "^4.18.3",
    "helmet": "^7.1.0",
    "i18next": "^23.10.0",
    "i18next-browser-languagedetector": "^7.2.0",
    "lucide-react": "^0.344.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-i18next": "^14.0.5",
    "react-router-dom": "^6.22.3",
    "react-window": "^1.8.10",
    "tailwind-merge": "^2.2.1",
    "viem": "^2.7.9"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@types/compression": "^1.7.5",
