    "eslint-plugin-react-refresh": "^0.4.5",
    "globals": "^15.0.0",
    "hardhat": "^2.20.1",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "terser": "^5.27.2",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3",
    "typescript-eslint": "^7.1.0",
